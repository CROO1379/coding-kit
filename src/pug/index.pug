extends ./_inc/_layout.pug

append vars
	include ./_inc/_config.pug
	//- 以下の設定は build-dev.js から自動注入されます：
	//- - site (サイト情報)
	//- - pages (ページ情報)
	//- - page (現在のページ設定)
	//- - meta (現在のページのメタ情報)
	//- 
	//- 旧システムの設定（コメントアウト）:
	//- - var key = 'home'; // configのキーを指定
	//- - var meta = pages[key];
	//- ページ設定は build-dev.js から自動注入されるため、ここでの定義は不要
	//- 以下はVite環境移行前の旧設定（コメントアウト）
	//-
		//- var page = { // ページの基本設定
		//- 	// Slug
		//- 	slug : 'home', // ページ識別用： bodyClassなどに利用
		//- 	css_slug : 'home', // {page以下のdir名/CSSファイル名}
		//- 	// ファイルパス（Vite環境では相対パス使用）
		//- 	root : './', // ファビコンなどのルート設置のファイルパス
		//- 	img : './img/',
		//- 	pdf : './assets/pdf/',
		//- 	video : './assets/video/',
			js : './js/',
			css : './scss/',
		}

//- ◆ ページ限定でプリロードするファイル
append preload
	//- link(rel="preload", href=page.img+"home/mv_lg.webp", as="image", media="(min-width: 960px)")
	//- link(rel="preload", href=page.img+"home/mv_md.webp", as="image", media="(min-width: 600px) and (max-width: 959px)")
	//- link(rel="preload", href=page.img+"home/mv_sm.webp", as="image", media="(min-width: 599px)")

//- ◆ ページ限定で追加読み込みするCSS（`head`内のlink末尾に読み込み）
append css

//- ◆ ページ限定のJS（`body`末尾に読み込み）
append ft_js
	//- script(src=page.js+"page/home.js" defer)

//- ◆ コンテンツエリア
block contents
	main.site_frame__main
		.site_main: .site_main__inner

			//- MARK: メインビジュアル
			//- ==================================================
			.mv
				.mv__inner
					.mv__image
						picture.picture
							source(srcset="/assets/img/home/mv_lg.webp" media="(min-width: 960px)" width="1440" height="680")
							source(srcset="/assets/img/home/mv_md.webp" media="(min-width: 600px)" width="900" height="900")
							source(srcset="/assets/img/home/mv_sm.webp" media="(min-width: 360px)" width="480" height="920")
							img.img(src="/assets/img/home/mv_sm.webp" decoding="async" alt="Example" width="480" height="920")

			//- サンプル
			//- ==================================================
			include ./_inc/_sample/_sample_home.pug

