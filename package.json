{
  "name": "coding-kit",
  "version": "1.0.0",
  "description": "A modern static site starter kit with Vite, Pug, and Sass",
  "type": "module",
  "scripts": {
    "dev": "run-s clean:dev build:dev && run-p dev:watch dev:serve",
    "dev:serve": "browser-sync start --server public --port 3000 --files 'public/**/*.html,public/**/*.css,public/**/*.js' --no-ghost-mode --no-notify",
    "dev:watch": "node scripts/watch.js",
    "build": "run-s clean:dev build:dev",
    "build:dev": "node scripts/build-dev.js",
    "build:prod": "run-s clean:prod build:prod:vite",
    "build:prod:vite": "vite build --outDir dist",
    "clean": "run-p clean:dev clean:prod",
    "clean:dev": "rm -rf public",
    "clean:prod": "rm -rf dist",
    "watch": "npm run dev:watch",
    "serve": "npm run dev:serve"
  },
  "keywords": [
    "vite",
    "pug",
    "sass",
    "static-site",
    "starter-kit"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "chokidar": "^4.0.3",
    "glob": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "pug": "^3.0.3",
    "sass": "^1.77.0",
    "vite": "^5.4.0"
  }
}
